{
    "suggest": {
        "autoTrigger": "trigger",
        "minTriggerInputLength": 2,
        "snippetIndicator": "â–º"
    },
    "diagnostic.enable": true,
    "javascript": {
        "autoClosingTags": true,
        "suggestionActions": {
            "enabled": false
        },
        "suggest": {
            "autoImports": true
        }
    },
    "typescript": {
        "autoClosingTags": true,
        "suggest": {
            "autoImports": true
        }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
}
