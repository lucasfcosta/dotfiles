{
  "coc.source.emoji.filetypes": ["markdown"],
  "diagnostic": {
    "enable": true,
    "errorSign": "✘",
    "warningSign": "⚠",
    "infoSign": "ⓘ",
    "enableMessage": "always",
    "messageTarget": "float",
    "virtualText": false,
    "checkCurrentLine": true
  },
  "suggest": {
    "autoTrigger": "trigger",
    "minTriggerInputLength": 2,
    "snippetIndicator": "►"
  },
  "javascript": {
    "autoClosingTags": true,
    "suggestionActions": {
      "enabled": false
    },
    "suggest": {
      "autoImports": true
    }
  },
  "typescript": {
    "autoClosingTags": true,
    "suggest": {
      "autoImports": true
    }
  },
  "golang": {
    "command": "gopls",
    "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
    "filetypes": ["go"]
  }
}
